@model IEnumerable<Test3.Models.Supplier>

<br />
<br />
@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    @Html.TextBox("searching")
    <input type="submit" value="Search" placeholder="Enter Company Name" />
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Supplier Code
            </th>
            <th>
                Supplier Name
            </th>
            <th>
                Supplier Contact Number
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    No Supplier Found
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.SupplierName</td>
                    <td>@item.TelephoneNo</td>
                </tr>
            }
        }
    </tbody>
</table>